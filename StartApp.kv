<Login>
    untis_un: username.text
    untis_pw: pw.text
    login_btn: btn1
    GridLayout:
        cols: 1
        rows: 3
        size: root.width,root.height
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint_y: None
            height: 60
            padding: [10, 10]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0, 0.6, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Widget:
                size_hint_x: 1

            Image:
                source: 'assets\startIcon.png' 
                size_hint: None, None
                width: 50
                height: 50

            Widget:
                size_hint_x: 1
        
        GridLayout:
            cols: 1
            rows: 3
            spacing: 25
            padding: [75,140,0,0]
            size_hint: (None,None)
            width: root.width
            height: 220
            TextInput:
                id: username
                hint_text: "Untis-Username"
                size_hint_y: None
                size_hint_x: None
                width: 350
                height: 50
                background_color: (1, 1, 1, 0.8)
            TextInput:
                id: pw
                hint_text: "Untis-Passwort"
                password: True
                size_hint_y: None
                size_hint_x: None
                width: 350
                height: 50
                background_color: (1, 1, 1, 0.8)
            Button:
                id: btn1
                text: "Login"
                size_hint_y: None
                size_hint_x: None
                width: 350
                height: 50
                background_color: (0, 0.6, 0.3, 0.7)
                on_press:
                    root.login()

<grades>:
    GridLayout:
        cols: 1
        rows: 3
        size: root.width,root.height
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint_y: None
            height: 60
            padding: [10, 10]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0, 0.6, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
           

            Image:
                source: 'assets\dabsence.png' 
                size_hint: None, None
                width: 50
                height: 50

            Widget:
                size_hint_x: 1

            Image:
                source: 'assets\startIcon.png' 
                size_hint: None, None
                width: 50
                height: 50
            
            Widget:
                size_hint_x: 1

            Button:
                id: btn2
                size_hint_y: None
                size_hint_x: None
                width: 67
                height: 67
                background_color: (0, 0, 0, 0)
                canvas.before:
                    Rectangle:
                        source: 'assets/logout1.png'
                        size: self.width - 10, self.height - 10
                        pos: self.x + 5, self.y - 10
                on_press: root.manager.current = 'login'

        GridLayout:
            cols: 1
            spacing: 2
            padding: [0,20,0,0]
            size_hint: (None,None)
            width: root.width
            height: 220
            Label:
                text: root.overall_average
                font_size: 50
                color : root.oa_color
                size_hint_y: None
                size_hint_x: None
                width: root.width
                height: 50    
                halign: 'center'           
            Label:
                text: root.ratio
                color: root.oa_color
                font_size: 18
                markup: True
                size_hint_x: None
                size_hint_y: None
                width: root.width
                height: 50
                halign: 'center'

        ScrollView:
            size_hint: 1, None
            height: 420 

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10
                id: dynamic_subjects